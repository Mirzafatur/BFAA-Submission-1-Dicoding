<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5AB3DA"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_github"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/github_logo"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/github_user"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:layout_above="@id/img_github"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mirza"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:fontFamily="@font/montserrat"
        android:gravity="center_horizontal"
        android:layout_below="@+id/img_github"
        android:layout_marginTop="24dp"/>

</RelativeLayout>